{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clase</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clase.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ clase.nombre }}</td>
            </tr>
            <tr>
                <th>Detalle</th>
                <td>{{ clase.detalle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('clase_edit', { 'id': clase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
