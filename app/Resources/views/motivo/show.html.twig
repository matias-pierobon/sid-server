{% extends 'base.html.twig' %}

{% block body %}
    <h1>Motivo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ motivo.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ motivo.nombre }}</td>
            </tr>
            <tr>
                <th>Detalle</th>
                <td>{{ motivo.detalle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('motivo_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('motivo_edit', { 'id': motivo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
