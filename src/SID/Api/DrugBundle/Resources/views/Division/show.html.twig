{% extends "DrugBundle:Droguero:base.html.twig" %}

{#% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %#}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('drug_drogueros_index') }}">Drogueros</a></li>
        {% for place in division.path %}
            {% if loop.last %}
                <li class="breadcrumb-item active">{{ place }}</li>
            {% else %}
                <li class="breadcrumb-item">
                    <a href="{{ path('drug_drogueros_division_show', {'droguero': place.droguero.id, 'division': place.id}) }}">
                        {{ place }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ol>
{% endblock %}

{% block content %}

    {% if is_granted('config', division.droguero) %}
        <div class="card">
            <div class="card-block">
                <div class="card-title">Panel de Control</div>
                <a class="card-link btn btn-primary"
                   href="{{ path('drug_drogueros_division_new', {'droguero': division.droguero.id, 'division': division.id}) }}">Agregar
                    Subdivisión</a>
                <button class="card-link btn btn-info" disabled>Ingresar Stock</button>

            </div>
        </div>
    {% endif %}

    <div class="row">
        {% for subdivision in division.subdivisiones %}
            <div class="col col-md-4">
                <div class="card">
                    <div class="card-block">
                        <h4 class="card-title">{{ subdivision.nombre }}</h4>

                        <div class="btn-group" role="group" aria-label="Subdivisión">
                            <a href="{{ path('drug_drogueros_division_show', {'droguero': division.droguero.id, 'division': subdivision.id}) }}"
                               class="btn btn-primary"><i
                                        class="fa fa-sign-in" aria-hidden="true"></i>
                            </a>
                            {% if is_granted('config', division.droguero) %}<a class="btn btn-warning"
                               href="{{ path('drug_drogueros_division_edit', {'droguero': subdivision.droguero.id, 'division': subdivision.id}) }}"
                            >
                                <i class="fa fa-pencil" aria-hidden="true"></i>{% endif %}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Sustancias</h4>
        </div>
        <div class="card-block">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Formula</th>
                    <th>Fecha de Ingreso</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for droga in division.stocks %}
                    <tr>
                        <td><a href="{{ path('sustancias_show', { 'id': droga.id }) }}">{{ droga.nombre }}</a></td>
                        <td>{{ droga.formulaMolecular }}</td>
                        <td>{{ droga.fechaIngreso | date('d/m/Y') }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="{{ path('sustancias_show', { 'id': droga.id }) }}"
                                   class="btn btn-outline-warning"><i class="fa fa-info" aria-hidden="true"></i></a>
                                <a href="{{ path('sustancias_edit', { 'id': droga.id }) }}"
                                   class="btn btn-outline-info"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">
                            <div class="alert alert-info" role="alert">
                                <strong>Info!</strong> No hay stocks cargados.
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
