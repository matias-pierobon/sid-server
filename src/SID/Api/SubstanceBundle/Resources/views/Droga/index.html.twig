{% extends "SubstanceBundle:Droga:base.html.twig" %}

{#% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %#}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Sustancias</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">
                Lista de Sustancias
                <div class="btn-group pull-right">
                    <a class="btn btn-primary" href="{{ path('sustancias_new') }}">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Agregar
                    </a>
                </div>
            </h4>
        </div>
        <div class="card-block">

            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Formula</th>
                    <th>Fecha de Ingreso</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                {% for droga in drogas %}
                    <tr>
                        <td><a href="{{ path('sustancias_show', { 'id': droga.id }) }}">{{ droga.nombre }}</a></td>
                        <td>{{ droga.formulaMolecular }}</td>
                        <td>{{ droga.fechaIngreso | date('d/m/Y') }}</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="{{ path('sustancias_show', { 'id': droga.id }) }}"
                                   class="btn btn-warning"><i class="fa fa-info" aria-hidden="true"></i></a>
                                <a href="{{ path('sustancias_edit', { 'id': droga.id }) }}"
                                   class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
