{% extends "SubstanceBundle:Droga:base.html.twig" %}

{#% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %#}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('sustancias_index') }}">Sustancias</a></li>
        <li class="breadcrumb-item"><a href="{{ path('clases_sustancias_index') }}">Clases de Sustancias</a></li>
        <li class="breadcrumb-item active">{{ clase.nombre }}</li>
    </ol>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col col-md-4">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Ver Clase</h4>

                    <div class="row">
                        <div class="col col-sm-4">Nombre:</div>
                        <div class="col col-sm-8">{{ clase.nombre }}</div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-4">Fecha de Ingreso</div>
                        <div class="col col-sm-8">{{ clase.sysDate | date("d/m/Y") }}</div>
                    </div>
                    <div class="row">
                        <div class="col col-sm-4">Detalle:</div>
                        <div class="col col-sm-8">{{ clase.detalle }}</div>
                    </div>

                    <a class="btn btn-secondary" href="{{ path('clases_sustancias_index') }}">Lista de Clases</a>
                    <a class="btn btn-info" href="{{ path('clases_sustancias_edit', { 'id': clase.id }) }}">Editar</a>
                </div>
            </div>

        </div>
        <div class="col col-md-8">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Incompatibilidades</h4>
                </div>
                <div class="card-block">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Fecha de Ingreso</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in clase.incompatibilidades %}
                            <tr>
                                <td>
                                    <a href="{{ path('clases_sustancias_show', { 'id': c.id }) }}">{{ c.nombre }}</a>
                                </td>
                                <td>{{ c.sysDate | date('d/m/Y') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
