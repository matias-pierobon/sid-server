{% extends 'SubstanceBundle:Entidad:base.html.twig' %}

{% form_theme edit_form 'bootstrap_3_horizontal_layout.html.twig' %}
{% form_theme delete_form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Sustancias</li>
        <li class="breadcrumb-item"><a href="{{ path('entidades_index') }}">Entidades Reguladoras</a></li>
        <li class="breadcrumb-item active">{{ entidad.nombre }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Editar Entidad Reguladora</h4>

            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <a class="btn btn-secondary" href="{{ path('entidades_index') }}">Lista de Entidades</a>
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-pencil" aria-hidden="true"></i>
                Editar
            </button>
            <a class="btn btn-danger" href="{{ path('entidades_delete', { 'id': entidad.id }) }}">
                <i class="fa fa-trash" aria-hidden="true"></i>
                Eliminar</a>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
