{% extends 'SubstanceBundle:Entidad:base.html.twig' %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li class="breadcrumb-item">Sustancias</li>
    <li class="breadcrumb-item active">Entidades Reguladoras</li>
</ol>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-block">
        <h4 class="card-title">Lista de Entidades</h4>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Detalle</th>
                <th>Fecha de Ingreso</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entidadReguladora in entidades %}
            <tr>
                <td>{{ entidadReguladora.nombre }}</td>
                <td>{{ entidadReguladora.detalle }}</td>
                <td>{% if entidadReguladora.fechaIngreso %}{{ entidadReguladora.fechaIngreso| date("d/m/Y") }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('entidades_show', { 'id': entidadReguladora.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('entidades_edit', { 'id': entidadReguladora.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('entidades_new') }}">Create a new entidadReguladora</a>
        </li>
    </ul>
    </div>
</div>
{% endblock %}
