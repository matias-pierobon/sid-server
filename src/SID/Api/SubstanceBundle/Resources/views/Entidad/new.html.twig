{% extends 'SubstanceBundle:Entidad:base.html.twig' %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('sustancias_index') }}">Sustancias</a></li>
        <li class="breadcrumb-item"><a href="{{ path('entidades_index') }}">Entidades Reguladoras</a></li>
        <li class="breadcrumb-item active">Entidades Reguladoras</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Nueva Entidad</h4>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <a class="btn btn-secondary" href="{{ path('entidades_index') }}">Lista de Entidades</a>
            <input class="btn btn-primary" type="submit" value="Crear"/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
