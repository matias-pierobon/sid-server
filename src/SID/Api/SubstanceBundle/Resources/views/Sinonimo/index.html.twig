{% extends 'SubstanceBundle:Sinonimo:base.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('sustancias_index') }}">Sustancias</a></li>
        <li class="breadcrumb-item active">Sinónimos</li>
    </ol>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            Lista de Sinónimos
            <div class="btn-group pull-right">
                <a class="btn btn-primary" href="{{ path('sinonimo_new') }}">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Agregar
                </a>
            </div>
        </h4>
    </div>
    <div class="card-body">

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sinonimo in sinonimos %}
                <tr>
                    <td><a href="{{ path('sinonimo_show', { 'id': sinonimo.id }) }}">{{ sinonimo.id }}</a></td>
                    <td>{{ sinonimo.nombre }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a href="{{ path('sinonimo_show', { 'id': sinonimo.id }) }}"
                               class="btn btn-info"><i
                                        class="fa fa-eye" aria-hidden="true"></i></a>
                            <a href="{{ path('sinonimo_edit', { 'id': sinonimo.id }) }}"
                               class="btn btn-warning"><i
                                        class="fa fa-pencil" aria-hidden="true"></i></a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
