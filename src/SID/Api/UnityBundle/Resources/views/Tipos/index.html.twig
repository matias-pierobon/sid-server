{% extends 'UnityBundle:Tipos:layout.html.twig' %}

{% set pageTitle = "Tipos de Unidad" %}

{% block content %}

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Detalle</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo in tipos %}
            <tr>
                <td><a href="{{ path('tipo_show', { 'id': tipo.id }) }}">{{ tipo.id }}</a></td>
                <td>{{ tipo.nombre }}</td>
                <td>{{ tipo.detalle }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="{{ path('tipo_edit', { 'id': tipo.id }) }}" class="btn btn-secondary">Editar</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('tipo_new') }}">Create a new tipo</a>
        </li>
    </ul>
{% endblock %}
