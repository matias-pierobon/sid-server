{% extends 'UnityBundle:Unidades:layout.html.twig' %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('unidades_index') }}">Unidades</a></li>
        <li class="breadcrumb-item active">{{ unidadEjecutora.nombre }}</li>
    </ol>
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-block">
        <h4 class="card-title">Unidad Ejecutora</h4>

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Nombre</th>
                    <td>{{ unidadEjecutora.nombre }}</td>
                </tr>
                <tr>
                    <th>Cufe</th>
                    <td>{{ unidadEjecutora.cufe }}</td>
                </tr>
                <tr>
                    <th>Detalle</th>
                    <td>{{ unidadEjecutora.detalle }}</td>
                </tr>
            </tbody>
        </table>
            <a class="btn btn-secondary" href="{{ path('unidades_index') }}">Lista de Unidades</a>
            <a class="btn btn-info" href="{{ path('unidades_edit', { 'id': unidadEjecutora.id }) }}">Editar</a>
    </div>
</div>
{% endblock %}
